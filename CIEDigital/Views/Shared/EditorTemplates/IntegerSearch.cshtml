@model IntegerSearch

<div class="form-group">

    @Html.LabelFor(m => m.SearchTerm, Model.LabelText, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-2">
        @Html.EnumDropDownListFor(m => m.Comparator, new { @class = "form-control numberSelect" })
    </div>

    <div class="col-sm-8 form-inline">
        @Html.TextBoxFor(m => m.SearchTerm, new { @class = "form-control", type = "search" })

        @if (Model.Comparator == NumericComparators.InRange || Model.Comparator == NumericComparators.Within)
        {
            @Html.EditorFor(m => m.SearchTerm2)
            <hr/>
            @Html.TextBoxFor(m => m.SearchTerm2, new { @class = "form-control", type = "date" })
        }
        else
        {
            @Html.TextBoxFor(m => m.SearchTerm2, new { @class = "form-control", type = "date", style = "display:none;" })
        }
    </div>


    @Html.HiddenFor(m => m.Property)
    @Html.HiddenFor(m => m.TargetTypeName)
    @Html.Hidden("ModelTypeName", Model.GetType().AssemblyQualifiedName)
</div>